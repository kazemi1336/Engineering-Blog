
@using EnggBlog.Core.Interfaces
@inject IUser _UserService

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="fontiran.com:license" content="Y68A9">
    <link rel="icon" href="/AdminContent/images/favicon.ico" type="image/ico" />
    <title>PersiamahakEngineeringPortal</title>

    <partial name="_Styles" />

</head>
<!-- /header content -->
<body class="nav-md">
    <div class="container body">
        <div class="main_container">


            @* ------------SideBar--------------- *@

            <div class="col-md-3 left_col hidden-print">

                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="/Home/Index" class="site_title"><i class="fa fa-home"></i> <span>Persiamahak</span></a>
                    </div>

                    <div class="clearfix"></div>
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">

                        <div class="menu_section">
                            @(await Component.InvokeAsync("MainMenuCompunent"))
                        </div>

                        <!-- /sidebar menu -->
                        <!-- /menu footer buttons -->
                        <div class="sidebar-footer hidden-small">
                            <a data-toggle="tooltip" data-placement="top" title="" data-original-title="تنظیمات">
                                <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="" onclick="toggleFullScreen();" data-original-title="تمام صفحه">
                                <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="" class="lock_btn" data-original-title="قفل">
                                <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="" href="login.html" data-original-title="خروج">
                                <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                            </a>
                        </div>
                        <!-- /menu footer buttons -->
                    </div>
                </div>
            </div>
            @* -------------FinishSideBar-------------- *@
            <!-- /header content -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">

                    <div class="page-title">
                        <!--------منو-------->

                        <div class="col-md-7 col-sm-7 col-xs-12">

                            <ul class="nav navbar-right panel_toolbox">
                                    <li>
                                        <a href="https://localhost:44340/Register/" class="close-link" title="ثبت رزومه"><i class="fa fa-user fa-2x"></i></a>

                                    </li>
                             </ul>

                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a href="https://localhost:44340/" class="close-link" title="مطالب مهندسی"><i class="fa fa-newspaper-o fa-2x"></i></a>

                                </li>
                            </ul>
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a href="/Home/" class="close-link"><i class="fa fa-home fa-2x"></i></a>
                                </li>
                            </ul>


                            @*</div>*@
                            <div>
                                <h4>سایت مهندسی پرشیا محک</h4>
                                <h5>Persiamahak Engineering portable</h5>
                            </div>
                        </div>
                        @* -------------پایان منو-------------- *@
                        <div class="col-md-5 col-sm-5 col-xs-12">
                            <form action="/Home" method="get">
                                <div class="title_right">
                                    <div class=" form-group pull-right top_search">
                                        <div class="input-group">
                                            <input type="text" name="filter" class="form-control" placeholder="نام کتاب و مقاله">
                                            <span class="input-group-btn">
                                                <button type="submit" class="btn btn-default">برو!</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="clearfix"></div>

                    <div class="row">
                        @RenderBody()
                    </div>

                </div>
                <!-- /page content -->
                <!-- /page content -->
                <!-- footer content -->
                <!-- /footer content -->
            </div>
            <div id="lock_screen">
                <table>
                    <tr>
                        <td>
                            <div class="clock"></div>
                            <span class="unlock">
                                <span class="fa-stack fa-5x">
                                    <i class="fa fa-square-o fa-stack-2x fa-inverse"></i>
                                    <i id="icon_lock" class="fa fa-lock fa-stack-1x fa-inverse"></i>
                                </span>
                            </span>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <partial name="_Scripts" />

        @RenderSection("Scripts", false)
    </div>
</body>
</html>

